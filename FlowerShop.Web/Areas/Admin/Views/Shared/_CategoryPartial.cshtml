@using FlowerShop.DataAccess.Models
@model Category

@{
    var isSell = Model.IsCategorySell ? "1" : "0";
}

<li class="li-category" data="@isSell">
    <a asp-area="Admin" asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id">@Model.Name</a>

    @if (Model.SubCategories != null && Model.SubCategories.Any())
    {
        <ul>
            @foreach (var subCategory in Model.SubCategories)
            {
                @await Html.PartialAsync("_CategoryPartial", subCategory)
            }
        </ul>
    }
</li>
