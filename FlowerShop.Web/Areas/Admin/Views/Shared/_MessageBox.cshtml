
<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Thành công</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label=""></button>
            </div>
            <div class="modal-body" id="successMessage">
                <!-- Nội dung thông báo thành công -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Lỗi</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label=""></button>
            </div>
            <div class="modal-body" id="errorMessage">
                <!-- Nội dung thông báo lỗi -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmMessage">
                <!-- Nội dung xác nhận -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-warning" id="confirmYesButton">Đồng ý</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showSuccess(message) {
        $('#successMessage').text(message);
        $('#successModal').modal('show');
    }

    function showError(message) {
        $('#errorMessage').text(message);
        $('#errorModal').modal('show');
    }

    const showErrorHTML = (message) => {
        $('#errorMessage').html(message);  
        $('#errorModal').modal('show');
    }

    function showConfirm(message, yesCallback) {
        $('#confirmMessage').text(message);
        $('#confirmYesButton').off('click').on('click', function () {
            yesCallback();
            $('#confirmModal').modal('hide');
        });
        $('#confirmModal').modal('show');
    }
</script>
