@using FlowerShop.Common.ViewModels
@using Newtonsoft.Json
@{
    var popupViewModel = TempData["PopupViewModel"] != null
        ? JsonConvert.DeserializeObject<PopupViewModel>(TempData["PopupViewModel"].ToString())
        : null;
}
@if (popupViewModel!=null)
{
   
    @if (popupViewModel.Type == PopupViewModel.YES_NO)
    {
        <div class="modal fade" id="layout-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <!-- Xanh dương nhạt -->
                        <h5 class="modal-title" id="exampleModalLabel">@popupViewModel.Title</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @popupViewModel.Message
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary">Lưu</button> <!-- Nút xanh dương -->
                    </div>
                </div>
            </div>
        </div>
    }
    else if (popupViewModel.Type == PopupViewModel.SUCCESS)
    {
        <div class="modal fade" id="layout-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <!-- Màu xanh lá cây -->
                        <h5 class="modal-title" id="exampleModalLabel">@popupViewModel.Title</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @popupViewModel.Message
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal">Đóng</button> <!-- Nút xanh lá -->
                    </div>
                </div>
            </div>
        </div>
    }
    else if (popupViewModel.Type == PopupViewModel.ERROR)
    {
        <div class="modal fade" id="layout-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <!-- Màu đỏ -->
                        <h5 class="modal-title" id="exampleModalLabel">@popupViewModel.Title</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @popupViewModel.Message
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button> <!-- Nút đỏ -->
                    </div>
                </div>
            </div>
        </div>
    }

    <script>
        $(document).ready(function () {
            $('#layout-modal').modal('show');
        });
    </script>
}
