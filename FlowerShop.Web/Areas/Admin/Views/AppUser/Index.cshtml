@model IEnumerable<FlowerShop.Web.ViewModels.AppUserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lí nhân viên</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Images)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLock)
                </td>

                <td>
                    <a asp-action="Edit" asp-area="Admin" asp-controller="AppUser" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pencil" style="color: #FFCC99; width: 20px; height: 30px"></i>
                    </a>|
                    <!-- Form cho nút xóa -->
                    <form asp-action="Delete" asp-area="Admin" asp-controller="AppUser" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn khóa tài khoản của nhân viên này?');">
                        <button type="submit" style="border: none; background: none; cursor: pointer;">
                            <i class="fa-solid fa-lock" style="color:red; width: 20px; height: 30px"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@* căn trôn k + d *@


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Ngăn dropdown đóng lại khi chọn checkbox
            $('.dropdown-menu').on('click', function (e) {
                e.stopPropagation();
            });

            $('.dropdown-menu input[type="checkbox"]').on('change', function () {
                let selected = [];
                $('.dropdown-menu input[type="checkbox"]:checked').each(function () {
                    selected.push($(this).next().text().trim());
                });
            });
        });
    </script>
}