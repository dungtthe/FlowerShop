                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            <div class="row">
                                @foreach (var product in Model)
                                {
                                    <!-- Kiểm tra và lấy ảnh sản phẩm -->
                                    string[] listImgInProduct = product.Images != null
                                    ? JsonConvert.DeserializeObject<string[]>(product.Images)
                                    : new string[] { "no_img.png" };
                                    var firstImg = listImgInProduct[0];

                                    <!-- Kiểm tra và lấy giá sản phẩm từ ProductPrice -->
                                    var productPrices = product.ProductPrices?.OrderBy(p => p.Priority).ToList();
                                    var priceDefault = productPrices?.Where(p => p.StartDate == null && p.EndDate == null).FirstOrDefault()?.Price ?? 0;
                                    var priceSale = productPrices?.FirstOrDefault()?.Price ?? 0;
                                    var flag = priceDefault > priceSale;

                                    <!-- Kiểm tra và lấy danh mục sản phẩm từ ProductCategories -->
                                    var productCategory = product.ProductCategories?.FirstOrDefault(pc => !pc.IsDelete)?.Category?.Name;

                                    <div class="col-md-6 col-lg-6 col-xl-4">
                                        <div class="rounded position-relative product-item">
                                            <div class="product-img">
                                                @if (firstImg.Contains("http"))
                                                {
                                                    <img src="@firstImg" alt="ảnh sản phẩm" class="img-fluid w-100 rounded-top product-img-zoom" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content("~/images/products/" + firstImg)" alt="ảnh sản phẩm" class="img-fluid w-100 rounded-top product-img-zoom" />
                                                }
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                                                @ViewBag.Category?.Name <!-- Hiển thị tên danh mục của sản phẩm -->
                                            </div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>@product.Title</h4>
                                                <p>@product.Description</p>
                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="text-dark fs-5 fw-bold mb-0">
                                                        @if (flag)
                                                        {
                                                            <span class="text-decoration-line-through">@Converter.ConvertToVietnameseDong(priceDefault)</span> <!-- Hiển thị giá cũ nếu có sale -->
                                                        }
                                                        <span class="price-current">@Converter.ConvertToVietnameseDong(priceSale)</span> <!-- Hiển thị giá hiện tại -->
                                                    </p>
                                                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                        <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                                    </a>
