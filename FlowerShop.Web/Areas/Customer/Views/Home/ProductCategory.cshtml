    }

        .product-img img {
            object-fit: cover; /* Giữ tỷ lệ ảnh */
            width: 90%; /* Đảm bảo ảnh luôn đầy khung */
            height: 100%;
            transition: transform 0.3s ease; /* Thêm hiệu ứng zoom */
        }

        .product-img:hover img {
            transform: scale(1.1); /* Phóng to ảnh khi hover */
        }

    .product-item {
        transition: box-shadow 0.3s ease; /* Hiệu ứng shadow cho toàn bộ item */
    }

        .product-item:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); /* Làm bóng dài hơn và mờ hơn */
        }

</style>