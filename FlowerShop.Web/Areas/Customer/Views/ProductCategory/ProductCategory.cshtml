<script>
    // Hàm xử lý sắp xếp
    async function sortProducts() {
        const sortOrder = document.getElementById("sortOrder").value; // Lấy giá trị sortOrder
        const categoryId = '@ViewBag.Category.Id'; // Lấy categoryId từ ViewBag

        // Kiểm tra nếu categoryId không hợp lệ
        if (!categoryId) {
            console.error("Category ID không hợp lệ.");
            alert("Category ID không hợp lệ.");
            return;
        }

        // Lấy phần tử product-list để cập nhật danh sách sản phẩm
        const productList = document.getElementById("product-list");
        if (!productList) {
            console.error("Không tìm thấy phần tử với id='product-list'.");
            alert("Không tìm thấy phần tử để hiển thị sản phẩm.");
            return;
        }

        // Hiển thị spinner trong khi chờ dữ liệu
        productList.innerHTML = `
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            `;

        // Gửi yêu cầu fetch đến server
        const url = `/category/${categoryId}/sort?sortOrder=${sortOrder}`;
        console.log("Gửi yêu cầu đến URL:", url);

        try {
            const response = await fetch(url);

            // Kiểm tra phản hồi từ server
            if (!response.ok) {
                throw new Error(`Không thể tải dữ liệu. Mã lỗi: ${response.status}`);
            }

            const data = await response.json(); // Giả sử server trả về JSON thay vì HTML

            if (data.success) {
                // Nếu thành công, cập nhật danh sách sản phẩm
                productList.innerHTML = data.products; // Giả sử sản phẩm là chuỗi HTML
            } else {
                // Nếu server trả về lỗi, hiển thị thông báo lỗi
                console.error(data.message || "Có lỗi xảy ra.");
                productList.innerHTML = `
                        <p class="text-danger">${data.message || "Không thể tải sản phẩm."}</p>
                    `;
            }
        } catch (error) {
            // Nếu có lỗi trong quá trình fetch hoặc xử lý
            console.error("Lỗi khi tải sản phẩm:", error);
            productList.innerHTML = `
                    <p class="text-danger">Không thể tải danh sách sản phẩm. Vui lòng thử lại sau.</p>
                `;
        }
    }

    // Đảm bảo script hoạt động sau khi DOM đã được load
    document.addEventListener("DOMContentLoaded", function () {
        const sortOrderDropdown = document.getElementById("sortOrder");
        if (!sortOrderDropdown) {
            console.error("Không tìm thấy phần tử với id='sortOrder'.");
            return;
        }

        // Gắn sự kiện onchange cho dropdown
        sortOrderDropdown.addEventListener("change", sortProducts);
    });
</script>

