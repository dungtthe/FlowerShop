@model IEnumerable<FlowerShop.DataAccess.Models.SaleInvoice>

<div class="container-fluid py-5">
	<div class="container py-5 text-center">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				<!-- Thanh điều hướng -->
				<ul class="nav nav-tabs justify-content-center">
					<li class="nav-item">
						<a class="nav-link  fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="Index">
							Chờ xác nhận
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link  fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="DaXacNhan">
							Đã xác nhận
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link  fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="DangChuanBi">
							Chuẩn bị hàng
						</a>
					</li>

					<li class="nav-item">
						<a class="nav-link fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="DangGiao">
							Đang giao hàng
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="GiaoThanhCong">
							Giao thành công
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link  fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="GiaoThatBai">
							Giao thất bại
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-bold" asp-area="Customer" asp-controller="PurchaseHistory" asp-action="DaHuy">
							Đã hủy
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Danh sách sản phẩm -->
		<div class="row justify-content-center mt-4">
			<div class="col-lg-10">
				<table class="table table-striped">
					<thead class="table-primary">
						<tr>
							<th scope="col">Mã đơn hàng</th>
							<th scope="col">Người nhận hàng</th>
							<th scope="col">Ngày mua</th>
							<th scope="col">Số điện thoại nhận hàng</th>
							<th scope="col">Địa chỉ nhận hàng</th>
						</tr>
					</thead>
					<tbody>
						<!-- Lặp qua danh sách sản phẩm ở trạng thái tương ứng -->
						@foreach (var item in Model)
						{
							<tr>
								<td> @Html.DisplayFor(modelItem => item.Id) </td>
								<td>@Html.DisplayFor(modelItem => item.NameRecipient)</td>
								<td>@Html.DisplayFor(modelItem => item.CreateDay)</td>
								<td>@Html.DisplayFor(modelItem => item.PhoneNumberRecipient)</td>
								<td>@Html.DisplayFor(modelItem => item.DeliveryAddress)</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>