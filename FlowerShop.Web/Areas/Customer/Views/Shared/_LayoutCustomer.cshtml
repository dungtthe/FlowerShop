<style>
    /* Định vị chatbox */
    #chatbox-container {
        position: fixed;
        bottom: 80px;
        /* Đặt phía trên nút cuộn */
        right: 20px;
        /* Khoảng cách từ cạnh phải màn hình */
        z-index: 1100;
        /* Chatbox cao hơn nút cuộn */
        width: 400px;
        height: 570px;
        padding: 0;
        /* Xóa padding thừa */
        margin: 0;
        /* Xóa margin thừa */
        background-color: transparent;
        /* Màu nền chatbox */
        display: none;
        /* Ẩn chatbox ban đầu */
        border-radius: 8px;
        /* Bo tròn góc */
        overflow: hidden;
        /* Ẩn nội dung thừa */
    }

    .chatbox__button {
        position: fixed;
        bottom: 110px;
        /* Điều chỉnh để nút chatbox nằm trên nút "Back to Top" */
        right: 20px;
        /* Khoảng cách từ cạnh phải màn hình */
        z-index: 1200;
        /* Nút chatbox cao hơn nút "Back to Top" */
    }
</style>
<script>
    const chatboxContainer = document.getElementById('chatbox-container');
    const backToTopButton = document.querySelector('.back-to-top');

    function toggleChatbox() {
        if (chatboxContainer.style.display === 'none' || chatboxContainer.style.display === '') {
            chatboxContainer.style.display = 'block'; // Hiển thị chatbox

        } else {
            chatboxContainer.style.display = 'none'; // Ẩn chatbox

        }
    }
</script>
