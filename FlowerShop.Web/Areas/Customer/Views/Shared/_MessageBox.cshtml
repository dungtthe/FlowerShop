<div class="overlay"></div>
<!-- Message Box Lỗi -->
<div id="errorBox" class="message-box error">
    <button class="close-btn" onclick="closeBox('errorBox')">×</button>
    <div class="icon">
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828843.png" alt="Cảnh báo">
    </div>
    <div class="title">Thất bại</div>
    <div class="description">
        Tên tài khoản, mật khẩu không được chứa kí tự đặc biệt và phải chứa từ 6-30 kí tự.
    </div>
</div>

<!-- Message Box Thành Công -->
<div id="successBox" class="message-box success">
    <button class="close-btn" onclick="closeBox('successBox')">×</button>
    <div class="icon">
        <img src="https://cdn-icons-png.flaticon.com/512/845/845646.png" alt="Thành công">
    </div>
    <div class="title">Thành công</div>
    <div class="description">
        Đăng ký tài khoản của bạn đã hoàn tất!
    </div>
</div>

<!-- Message Box Câu Hỏi -->
<div id="questionBox" class="message-box question">
    <button class="close-btn" onclick="closeBox('questionBox')">×</button>
    <div class="icon">
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828863.png" alt="Câu hỏi">
    </div>
    <div class="title">Yêu cầu xác nhận</div>
    <div class="description">
        Bạn có muốn đăng ký tài khoản không?
    </div>
    <div class="yes-no-buttons">
        <button class="yes" onclick="handleResponse('yes')">Có</button>
        <button class="no" onclick="handleResponse('no')">Không</button>
    </div>
</div>

<script>
    // Hàm đóng message box
    function closeBox(boxId) {
        document.getElementById(boxId).classList.remove('active');
        document.querySelector('.overlay').classList.remove('active');
    }

    // Hàm hiển thị message box error
    function showError(message) {
        document.querySelector('.overlay').classList.add('active');
        const errorBox = document.getElementById("errorBox");
        errorBox.querySelector('.description').textContent = message;
        errorBox.classList.add('active');
    }

    // Hàm hiển thị message box success
    function showSuccess(message) {
        document.querySelector('.overlay').classList.add('active');
        const successBox = document.getElementById("successBox");
        successBox.querySelector('.description').textContent = message;
        successBox.classList.add('active');
    }

    // Hàm hiển thị message box question
    function showQuestion(message, yesCallback) {
        document.querySelector('.overlay').classList.add('active');
        const questionBox = document.getElementById("questionBox");
        questionBox.querySelector('.description').textContent = message;
        questionBox.classList.add('active');

        // Gán callback cho nút Yes
        const yesBtn = questionBox.querySelector('.yes');
        yesBtn.onclick = () => {
            if (yesCallback) yesCallback();
            closeBox('questionBox');
        }

        // Nút No chỉ đóng message box
        const noBtn = questionBox.querySelector('.no');
        noBtn.onclick = () => {
            closeBox('questionBox');
        }
    }
</script>